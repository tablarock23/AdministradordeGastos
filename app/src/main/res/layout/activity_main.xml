<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- Header con saldo total -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administrador de Gastos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/totalBalanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo Total: S/ 0.00"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <!-- Botones de acciones principales -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/addBalanceBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="\nAgregar\nSaldo"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="5dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/addExpenseBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="\nAgregar\nGasto"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/addLoanBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="\nAgregar\nPr茅stamo"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:layout_marginStart="5dp"
            android:padding="12dp" />

    </LinearLayout>

    <!-- T铆tulo de pr贸ximos pagos -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pr贸ximos Pagos"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="10dp" />

    <!-- Lista de gastos pr贸ximos -->
    <ListView
        android:id="@+id/expensesListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/card_background"
        android:padding="10dp"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp" />

    <!-- Bot贸n de configuraci贸n -->
    <Button
        android:id="@+id/settingsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="锔 Configuraci贸n"
        android:background="@drawable/button_secondary"
        android:textColor="#666666"
        android:layout_marginTop="10dp"
        android:padding="12dp" />

</LinearLayout>